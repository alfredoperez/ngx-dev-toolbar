{
  "name": "docs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/docs/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "cache": true,
      "inputs": ["production", "^production"],
      "outputs": ["{workspaceRoot}/dist/apps/docs"],
      "options": {
        "command": "npx astro build",
        "cwd": "apps/docs"
      },
      "configurations": {
        "production": {}
      },
      "dependsOn": ["^build"]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx astro dev",
        "cwd": "apps/docs"
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx astro preview",
        "cwd": "apps/docs"
      },
      "dependsOn": ["build"]
    },
    "check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx astro check",
        "cwd": "apps/docs"
      }
    }
  }
}
